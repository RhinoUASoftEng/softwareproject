<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.softwareenginnering.teamrhinouasofteng.addEvent">

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:id="@+id/back"
        android:singleLine="false"
        android:onClick="backManageEvent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:id="@+id/submit"
        android:layout_alignTop="@+id/back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="addEvents" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:hint="@string/name"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/setTime"
        android:layout_alignStart="@+id/setTime" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/setTime"
        android:id="@+id/setTime"
        android:onClick="setTime"
        android:layout_below="@+id/setDate"
        android:layout_alignLeft="@+id/setDate"
        android:layout_alignStart="@+id/setDate" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:hint="@string/address" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/setDate"
        android:id="@+id/setDate"
        android:layout_below="@+id/address"
        android:layout_centerHorizontal="true"
        android:onClick="setDate" />

</RelativeLayout>
