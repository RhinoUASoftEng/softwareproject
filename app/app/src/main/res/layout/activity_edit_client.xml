<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.softwareenginnering.projecthoneybadger.EditClient"
    android:background="#7A0101">

    <Button
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:id="@+id/submit"
        android:text="@string/submit"
        android:layout_alignParentBottom="true"
        android:onClick="submitClient"
        android:background="#FFFFFF"
        android:textColor="#7A0101"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currentNumbe"
        android:id="@+id/textView21"
        android:layout_alignTop="@+id/phone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textColor="#FFFFFF"
        android:textSize="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currentemail"
        android:id="@+id/textView20"
        android:layout_below="@+id/address"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"
        android:textSize="10dp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:id="@+id/textView19"
        android:textColor="#FFFFFF"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textSize="10dp"
        android:layout_alignTop="@+id/address"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/TitleCL"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:id="@+id/textView17"
        android:layout_alignTop="@+id/name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textSize="10dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:id="@+id/phone"
        android:hint="@string/Phone"
        android:layout_below="@+id/Email"
        android:layout_alignLeft="@+id/Email"
        android:layout_alignStart="@+id/Email"
        android:background="#7A0101"
        android:typeface="serif"
        android:textStyle="bold|italic"
        android:textColor="#FFFFFF" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:id="@+id/Email"
        android:hint="@string/Email"
        android:layout_below="@+id/address"
        android:layout_alignLeft="@+id/address"
        android:layout_alignStart="@+id/address"
        android:background="#7A0101"
        android:typeface="serif"
        android:textStyle="bold|italic"
        android:textColor="#FFFFFF" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:id="@+id/address"
        android:hint="@string/address"
        android:background="#7A0101"
        android:typeface="serif"
        android:textStyle="bold|italic"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:hint="@string/name"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Email"
        android:layout_alignStart="@+id/Email"
        android:layout_marginTop="152dp"
        android:background="#7A0101"
        android:typeface="serif"
        android:textStyle="bold|italic"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:id="@+id/back"
        android:text="@string/back"
        android:onClick="backToManageClient"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#FFFFFF"
        android:textColor="#7A0101"
        android:textStyle="bold|italic"
        android:typeface="serif" />


</RelativeLayout>
