<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.softwareenginnering.teamrhinouasofteng.addInventory"
    android:background="#7A0101">

    <Button
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:id="@+id/submit"
        android:text="@string/submit"
        android:layout_alignParentBottom="true"
        android:onClick="submitInventory"
        android:background="#FFFFFF"
        android:textColor="#7A0101"
        android:textStyle="bold|italic"
        android:typeface="serif" />
    <Button
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:id="@+id/back"
        android:text="@string/back"
        android:onClick="backToManageInventory"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#FFFFFF"
        android:textColor="#7A0101"
        android:textStyle="bold|italic"
        android:typeface="serif" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:hint="@string/name"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/cost"
        android:layout_alignStart="@+id/cost"
        android:layout_marginTop="152dp"
        android:background="#7A0101"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textColor="#FFFFFF" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/cost"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_below="@id/name"
        android:hint="@string/cost"
        android:background="#7A0101"
        android:typeface="serif"
        android:textStyle="bold|italic"
        android:textColor="#FFFFFF" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:id="@+id/vendors"
        android:hint="@string/vendor"
        android:layout_below="@+id/cost"
        android:layout_alignLeft="@+id/cost"
        android:layout_alignStart="@+id/cost"
        android:background="#7A0101"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textColor="#FFFFFF" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:id="@+id/quantity"
        android:hint="@string/quantity"
        android:layout_below="@+id/vendors"
        android:layout_alignLeft="@+id/vendors"
        android:layout_alignStart="@+id/vendors"
        android:background="#7A0101"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textColor="#FFFFFF" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:id="@+id/reorder"
        android:layout_below="@+id/quantity"
        android:layout_centerHorizontal="true"
        android:hint="@string/reorder"
        android:background="#7A0101"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/InTitle"
        android:id="@+id/textView22"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textSize="30dp"
        android:textColor="#FFFFFF" />


</RelativeLayout>
