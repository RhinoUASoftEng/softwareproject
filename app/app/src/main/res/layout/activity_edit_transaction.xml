<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.softwareenginnering.projecthoneybadger.EditTransaction"
    android:background="#7A0101">

    <Button
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:id="@+id/submit"
        android:text="@string/submit"
        android:layout_alignParentBottom="true"
        android:onClick="submitTransaction"
        android:textColor="#7A0101"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:background="#FFFFFF" />
    <Button
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:id="@+id/back"
        android:text="@string/back"
        android:onClick="backToManageTransaction"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="#7A0101"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:background="#FFFFFF" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:hint="@string/item"
        android:id="@+id/Item"
        android:background="#7A0101"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:id="@+id/Amount"
        android:hint="@string/amount"
        android:background="#7A0101"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/Item"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:id="@+id/Employee"
        android:hint="@string/Employee"
        android:layout_below="@+id/Amount"
        android:layout_alignLeft="@+id/Amount"
        android:layout_alignStart="@+id/Amount"
        android:background="#7A0101"
        android:typeface="serif"
        android:textStyle="bold|italic"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/TitleTR"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item"
        android:id="@+id/textView24"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textSize="10dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/amount"
        android:id="@+id/textView25"
        android:textColor="#FFFFFF"
        android:textSize="10dp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:layout_alignBottom="@+id/Amount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Employee"
        android:id="@+id/textView26"
        android:layout_alignBottom="@+id/Employee"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textColor="#FFFFFF"
        android:textSize="10dp" />

</RelativeLayout>
