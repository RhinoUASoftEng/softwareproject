<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainMenu">

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/Inventory"
        android:layout_centerInParent="true"
        android:id="@+id/inventory"
        android:onClick="manageInventory"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inventory"
        android:layout_centerInParent="true"
        android:text="@string/Event"
        android:id="@+id/events"
        android:onClick="manageEvents"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/events"
        android:layout_centerInParent="true"
        android:text="@string/Trans"
        android:id="@+id/transactions"
        android:onClick="manageTransactions"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transactions"
        android:id="@+id/clients"
        android:text="@string/Client"
        android:layout_centerInParent="true"
        android:onClick="manageClients"/>


</RelativeLayout>

