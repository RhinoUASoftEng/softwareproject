<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.ecasy.inventorychecking.UserAccount">

    <Button
        android:onClick="manageInventory"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:id="@+id/manageInventory"
        android:text="Manage Inventory"/>
    <Button
        android:onClick="manageFunds"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:id="@+id/manageFunds"
        android:text="Manage Funds"
        android:layout_below="@+id/manageInventory"/>
    <Button
        android:onClick="backToLoginPage"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:text="logout"
        android:layout_below="@+id/manageFunds"/>
</RelativeLayout>
