<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.softwareenginnering.projecthoneybadger.addTransaction">

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:text="@string/submit"
        android:layout_alignParentBottom="true"
        android:onClick="submitTransaction"/>
    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:text="@string/back"
        android:onClick="backToManageTransaction"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="@string/item"
        android:id="@+id/Item"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Employee"
        android:layout_alignStart="@+id/Employee"
        android:layout_marginTop="152dp" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/Amount"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_below="@id/Item"
        android:hint="@string/amount" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/Employee"
        android:hint="@string/Employee"
        android:layout_below="@+id/Amount"
        android:layout_alignLeft="@+id/Amount"
        android:layout_alignStart="@+id/Amount" />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/dateSold"
        android:id="@+id/setDate"
        android:layout_below="@+id/Employee"
        android:layout_centerHorizontal="true"
        android:onClick="setDate" />

</RelativeLayout>
